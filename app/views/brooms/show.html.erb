<h1><%= @broom.name %></h1>

<p><%= @broom.description %></p>
<% if @broom.photo.attached? %>
  <%= image_tag @broom.photo, class: 'broom-photo' %>
<% end %>
<p>Prix : <%= number_to_currency(@broom.price) %>$</p>

<%= link_to 'Retour à la liste', brooms_path, class: 'btn btn-secondary' %>
<%= render 'bookings/form' %>

<%= link_to 'Réserver ce balai', new_booking_path(@broom), class: 'btn btn-secondary' %>
