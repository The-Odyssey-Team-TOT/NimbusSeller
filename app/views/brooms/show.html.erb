<div class="container mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg flex">

  <div class="w-1/2">
    <% if @broom.photo.attached? %>
      <%= image_tag @broom.photo, class: 'rounded-lg max-h-96', alt: @broom.name %>
    <% end %>
  </div>

  <div class="w-1/2 pl-10 flex flex-col justify-between">
    <div>
      <h1 class="text-3xl font-bold mb-4"><%= @broom.name %></h1>
      <p class="text-gray-700 mt-4"><%= @broom.description %></p>
      <p class="text-start font-semibold text-lg mt-4">Price <%= number_to_currency(@broom.price) %></p>
    </div>

    <div>
      <h3 class="text-xl font-bold mb-3">Book this broom</h3>
      <%= render 'components/form' %>
    </div>
    <%= link_to "Delete", broom_path(@broom),
      class: 'w-50 flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500',
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
</div>


<div class="container mx-auto text-center mt-6">
  <%= link_to 'Go back to the brooms', brooms_path, class: 'm-4 inline-block px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700' %>
</div>
