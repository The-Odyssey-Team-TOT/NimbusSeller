<div class="text-center mt-12 mb-8">
  <h1 class="text-4xl font-bold mb-6">All our Brooms</h1>
</div>

<div class="container mx-auto px-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @brooms.each do |broom| %>
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
        <% if broom.photo.present? %>
          <%= image_tag broom.photo, class: "w-full h-48 object-cover", alt: broom.name %>
        <% end %>
        <div class="p-4">
          <h5 class="text-xl font-semibold"><%= broom.name %></h5>
          <p class="text-gray-700 mb-4"><%= broom.description %></p>
          <p class="text-gray-900 font-bold text-lg"><%= number_to_currency(broom.price) %></p>
          <%= link_to 'View Details', broom_path(broom), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded transition-colors duration-200' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
