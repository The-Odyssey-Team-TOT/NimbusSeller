<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 cursor-pointer" onclick="animateAndRedirect()" tabindex="0" onkeydown="handleKeyDown(event)" style="background-image: url('/assets/quidditch2.png'); background-size: cover; background-position: center;">
  <h1 class="text-3xl font-bold text-gray-900 mb-2" style="background: rgba(255, 255, 255, 0.5); padding: 0.5rem 1rem; border-radius: 10px;">Nimbus Seller</h1>
  <img src="/assets/broom.png" alt="Broom logo" class="broom-logo w-32 h-32 mb-4">
  <script>
    function animateAndRedirect() {
      const broomLogo = document.querySelector('.broom-logo');
      broomLogo.style.animation = 'rotateImage 2s forwards';
    }

    function handleKeyDown(event) {
      if (event.key === 'Enter' || event.key === ' ') {
        animateAndRedirect();
      }
    }

    document.addEventListener("DOMContentLoaded", function() {
      const container = document.querySelector('.min-h-screen');
      container.focus();
      const broomLogo = document.querySelector('.broom-logo');
      broomLogo.addEventListener('animationend', function() {
        window.location.href = '/brooms';
      });
    });
  </script>
</div>
