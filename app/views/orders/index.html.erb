<div class="text-center m-3 p-3">
  <h1>My Orders</h1>
</div>

<div class="container mx-auto p-5 shadow-lg rounded-lg bg-white mt-3 my-5">
  <% if @orders.any? %>
    <div class="table-responsive">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="bg-gray-700 text-white">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Order ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Total Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @orders.each do |order| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap"><%= order.id %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= order.status %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(order.total_price) %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to 'View Order', order_path(order), class: 'text-blue-500 hover:text-blue-700' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-sm text-gray-600 p-4">
      No orders found.
    </div>
  <% end %>
</div>
