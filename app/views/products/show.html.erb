<div class="product-details-container">
  <%= image_tag @product.image_url, alt: @product.name, class: 'product-image' %>
  <h1><%= @product.name %></h1>
  <p><strong>Description:</strong> <%= @product.description %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
  <p><strong>Stock:</strong> <%= @product.stock %></p>
  <div class="product-btn">
    <%# <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
    <div>
    <%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
    </div>
    <%= button_to 'Add to Cart', add_item_cart_path(@product), method: :post, class: 'btn btn-success ml-2' %>
  </div>
</div>
